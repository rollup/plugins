{
  // Important: this config is symlinked into package directories as `tsconfig.json`.
  // The `extends` path must therefore be relative to the symlink location (e.g. packages/<pkg>/).
  "extends": "../../.config/tsconfig.base.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/**/*"]
}
